<configuration>
   <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <file>logs/digital-signature.log</file>
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <fileNamePattern>logs/digital-signature-%d{yyyy-MM-dd_HH}-archive.gz</fileNamePattern>
         <maxHistory>10</maxHistory>
         <totalSizeCap>128MB</totalSizeCap>
      </rollingPolicy>
      <encoder class="net.logstash.logback.encoder.LogstashEncoder">
         <customFields>{"source":"mxrisc-digital-signature","id":"mxrisc-digital-signature"}</customFields>
      </encoder>
   </appender>
   <logger name="com.mxrisc" level="DEBUG" additivity="false">
      <appender-ref ref="FILE"/>
   </logger>
   <root level="INFO">
      <appender-ref ref="FILE"/>
   </root>
</configuration>
